#include <avr/io.h>
#include <avr/interrupt.h>
char flag = 0;
ISR(TIMER1_COMPA_vect)
{
	PORTD ^= (1 << 0);
	if (flag == 0)
	{
		OCR1A = 15624;  // 1к√ц
		flag = 1;
	}
	else if (flag == 1)
	{
		OCR1A = 7812;  // 2к√ц
		flag = 2;
	}
	else if (flag == 2)
	{
		OCR1A = 5208;  // 3к√ц
		flag = 0;
	}
}

int main(void)
{
	DDRD = 0xFF;
	DDRB = 0xFF;
	TCCR1A |= (1 << COM1A0) | (1 << COM1A1);
	TCCR1B |= (1 << WGM12) | (1 << CS12);
	TIMSK1 |= (1 << OCIE1A);
	OCR1A = 15624;  // дл€ частоты 1к√ц
	TCCR2A = (0 << COM2A1) | (1 << COM2A0) | (0 << COM2B1) | (1 << COM2B0) | (0 << WGM21) | (1 << WGM20);
	OCR2A = 0x79;
	OCR2B = 0x15;
	TCCR2B = (0 << CS22) | (1 << CS21) | (1 << CS20) | (1 << WGM22);
	sei();
    while (1) 
    {
    }
}

